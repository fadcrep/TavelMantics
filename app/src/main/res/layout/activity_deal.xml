<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DealActivity">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_hint"
            android:id="@+id/txtTitle" android:layout_marginTop="@dimen/text_margin_large"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="@dimen/text_margin_standar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="@dimen/text_margin_standar"
            app:layout_constraintEnd_toEndOf="parent"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="@string/price_hint"
        android:id="@+id/txtPrice" android:layout_marginTop="@dimen/text_margin_standar"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" android:layout_marginStart="@dimen/text_margin_standar"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="@dimen/text_margin_standar"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description_hint"
        android:id="@+id/txtDescription" android:layout_marginTop="@dimen/text_margin_standar"
        app:layout_constraintTop_toBottomOf="@+id/txtPrice" android:layout_marginStart="@dimen/text_margin_standar"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="@dimen/text_margin_standar"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_standar"
        android:layout_marginStart="@dimen/text_margin_standar"
        android:layout_marginTop="@dimen/text_margin_standar"
        android:text="Upload Image"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/ic_photo_camera"
        android:background="@color/colorAccent"
        android:drawablePadding="@dimen/text_margin_standar"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingRight="@dimen/text_margin_standar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescription" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_standar"
        android:layout_marginStart="@dimen/text_margin_standar"
        android:layout_marginTop="@dimen/text_margin_standar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnImage"
        app:srcCompat="@android:color/transparent" />
</androidx.constraintlayout.widget.ConstraintLayout>